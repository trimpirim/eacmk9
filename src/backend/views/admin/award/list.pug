extends layout.pug

block heading
  h1 #{__('admin.awards.heading')}

block actions
  .row
    .col-xs-12
      .form-group
        a.btn.btn-primary(href='/admin/award/create') #{__('admin.awards.add')}

block content
  .row 
    .col-xs-12
      .list
        each award, i in awards
          .row
            .col-xs-12.list-item(class=i % 2 == 0 ? 'odd' : 'even')
              .row
                .col-xs-3= award._id
                .col-xs-7= award.title
                .col-xs-1
                  a(href=`/admin/award/edit/${award._id}`)
                    i.glyphicon.glyphicon-edit
                .col-xs-1
                  a(href=`/admin/award/delete/${award._id}`)
                    i.glyphicon.glyphicon-trash
        else
          .row
            .col-xs-12.list-item #{__('admin.awards.no_awards')}