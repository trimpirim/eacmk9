include ../../../form-helpers/select.pug

.form-group
  +select(`${__('admin.dogs.breedings.dog')}`, 'bredWith', dogs.map(function(dogObject) { return {value: dogObject._id, title: dogObject.name, selected: dogObject._id == breeding.bredWith}}), {value: '', title: __('admin.dogs.breeding.dog.select')})
  if form && form.getErrors('bredWith').length > 0
    div.error= __(form.getErrors('bredWith')[0])
.form-group
  label.control-label #{__('admin.dogs.breedings.text')}
  input.form-control(type='text', name='text', value=`${breeding.text}`)
  if form && form.getErrors('text').length > 0
    div.error= __(form.getErrors('text')[0])

.row
  .col-xs-2
    .form-group
      button.btn.btn-primary(type='submit') #{__('admin.actions.save')}
  .col-xs-2
    .form-group
      a.btn.btn-primary(href=`/admin/dog/edit/${dog._id}`) #{__('admin.actions.cancel')}