.form-group
  label.control-label #{__('admin.dogs.image.file')}
  input.form-control(type='file', name='content')
  if form && form.getErrors('content').length > 0
    div.error= __(form.getErrors('content')[0])
.form-group
  label.control-label #{__('admin.dogs.image.title')}
  input.form-control(type='text', name='title' value=`${image.title}`)
  if form && form.getErrors('title').length > 0
    div.error= __(form.getErrors('title')[0])
.row
  .col-xs-2
    .form-group
      button.btn.btn-primary(type='submit') #{__('admin.actions.save')}
  .col-xs-2
    .form-group
      a.btn.btn-primary(href=`/admin/dog/edit/${dog._id}`) #{__('admin.actions.cancel')}