extends layout.pug

block heading
  h1 Dogs

block actions
  .row
    .col-xs-12
      .form-group
        a.btn.btn-primary(href='/admin/dog/create') Sukurti projektÄ…

block content
  .row 
    .col-xs-12
      .list
        each dog, i in dogs
          .row
            .col-xs-12.list-item(class=i % 2 == 0 ? 'odd' : 'even')
              .row
                .col-xs-3= dog._id
                .col-xs-6= dog.title
                .col-xs-1= dog.images.length
                .col-xs-1
                  a(href=`/admin/dog/edit/${dog._id}`)
                    i.glyphicon.glyphicon-edit
                .col-xs-1
                  a(href=`/admin/dog/delete/${dog._id}`)
                    i.glyphicon.glyphicon-trash