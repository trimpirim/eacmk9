.form-group
  label.control-label #{__('admin.dynamic_content.title')}
  input.form-control(type='text', name='title', value=`${dynamicContent.title}`)
  if form && form.getErrors('title').length > 0
    div.error= __(form.getErrors('title')[0])
.form-group
  label.control-label #{__('admin.dynamic_content.short_content')}
  textarea.form-control.js-ckeditor-replace(name='shortContent', id='dynamic-content-short-content', data-upload-url=`/admin/images/upload?type=dynamic-content-short-content&related-object=${dynamicContent._id}`)= dynamicContent.shortContent
  if form && form.getErrors('shortContent').length > 0
    div.error= __(form.getErrors('shortContent')[0])
.form-group
  label.control-label #{__('admin.dynamic_content.content')}
  textarea.form-control.js-ckeditor-replace(name='content', id='dynamic-content-content', data-upload-url=`/admin/images/upload?type=dynamic-content-content&related-object=${dynamicContent._id}`)= dynamicContent.content
  if form && form.getErrors('content').length > 0
    div.error= __(form.getErrors('content')[0])
.row
  .col-xs-2
    .form-group
      button.btn.btn-primary(type='submit') #{__('admin.actions.save')}
  .col-xs-2
    .form-group
      a.btn.btn-primary(href='/admin/dynamic-content/list') #{__('admin.actions.cancel')}